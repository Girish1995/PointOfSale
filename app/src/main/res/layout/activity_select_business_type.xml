<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@drawable/background"
    tools:context="com.pointofsale.start.SelectBusinessType">

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0sp"></LinearLayout>


    <LinearLayout
        android:weightSum="5"
        android:orientation="vertical"
        android:background="@drawable/rect_boundary"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0sp">
<TextView
    android:textStyle="bold"
    android:textColor="#064C7C"
    android:textSize="20sp"
    android:paddingLeft="10sp"
    android:gravity="center_vertical"
    android:text="Enter Login Details"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0sp" />


        <android.support.design.widget.TextInputLayout
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="0sp">

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Id" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0sp">

            <EditText
                android:inputType="textPassword"
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout

            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0sp">

            <Spinner
                android:overlapAnchor="false"
                android:backgroundTint="#000"
                android:id="@+id/spinner"
                android:entries="@array/business_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>


        </RelativeLayout>


        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0sp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/submit"
                    android:layout_marginBottom="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:text="Submit"
                    android:background="#064C7C"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:layout_weight="0.5"
    android:layout_width="match_parent"
    android:layout_height="0sp"></LinearLayout>
</LinearLayout>
